{
	// Formatting
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"[markdown]": {
		"editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
		"editor.renderWhitespace": "boundary"
	},
	"editor.formatOnSave": true,

	// Lint CSS with Stylelint
	"stylelint.enable": true, // default
	"stylelint.validate": [
		"css", // default
		"postcss", // default
		"astro",
		"svelte",
		"vue",
		"xml"
	],
	// Disable VSÂ Code's built-in linters to prevent them from reporting the same errors as Stylelint
	"css.validate": false,
	"less.validate": false,
	"scss.validate": false,

	// Lint JS and similar with ESLint
	"eslint.validate": [
		"astro", // .astro
		"javascript", // .js
		"javascriptreact", // .jsx
		"typescript", // .ts
		"typescriptreact" // .tsx
	],

	// Useful code actions on save
	"editor.codeActionsOnSave": {
		/* As object, "source.fixAll" actions are prioritized and executed first. Ref:
		https://github.com/microsoft/vscode/blob/1.90.0/src/vs/workbench/contrib/codeEditor/browser/saveParticipants.ts#L300-L332 */
		"source.addMissingImports": "explicit",
		"source.fixAll.eslint": "explicit",
		"source.fixAll.markdownlint": "explicit",
		"source.fixAll.stylelint": "explicit",
		"source.sortImports": "explicit"
	}
}
